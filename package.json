{
  "name": "chat_app_socket_io",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node ./src/server.ts",
    "start": "nodemon ./dist/server.js",
    "eject": "nodejs-scripts eject",
    "eslint": "eslint --ext js,ts",
    "lint": "eslint './src/**/*.{js,ts}'",
    "lint:fix": "eslint './src/**/*.{js,ts}' --fix",
    "prettify": "prettier --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@types/express": "4.17.13",
    "@types/mongoose": "5.11.97",
    "@types/socket.io": "3.0.2",
    "ansi-regex": "6.0.1",
    "bad-words": "^3.0.4",
    "bcryptjs": "^2.4.3",
    "date-format": "^3.0.0",
    "debug": "4.3.4",
    "dotenv": "^10.0.0",
    "engine.io": "6.2.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "express": "4.18.1",
    "jsonwebtoken": "^8.5.1",
    "minimist": "1.2.6",
    "mongoose": "^6.0.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "socket.io": "^4.2.0",
    "typescript": "4.6.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.13"
  },
  "eslintConfig": {
    "extends": "nodejs"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "npm": ">=6.4.1",
    "node": ">=10.13.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run eslint -- --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky(remove-everything-in-these-parentheses.See-the-issue-#29)": {
    "hooks": {
      "pre-commit": "npm run checkTs && lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*/*.d.ts",
      "!src/**/*/Loadable.{js,ts}",
      "!src/**/*/types.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
